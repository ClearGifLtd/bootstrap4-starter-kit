extends ../layouts/layout

block head
  title #{application} &middot; Enrollment

block styles
  link(rel='stylesheet', href='/css/page-enrollment.min.css')
  link(rel='stylesheet', href='lib/animate.css/animate.min.css')

block content
  .hero.page-content
    .container.white
      //- .masthead-brand
      //-   a(href='/')
      //-     img(src='https://d1ir1l1v07ijd0.cloudfront.net/img/logos/tpg_logo_rev.png', alt='TPG Logo')
      .row
        .col-sm-10.col-sm-offset-1
          .hero-heading(data-animation='fadeIn')
            h1.animation-fast.animated.fadeInDown Welcome! Let's get started!
            p.animation-slow.animated.fadeIn Please signup for the 2016 tax season with Tax Products Group.
          form.form-horizontal(role='form', method='POST')
            input(type='hidden', name='_csrf', value=_csrf)
            .form-group.form-group-lg
              label.sr-only.control-label(for='email') Email Address
              .col-sm-5.col-sm-offset-2
                input.form-control(type='email', name='email', id='email', placeholder='Enter your email address', autofocus=true, required)
              .col-sm-3
                button.btn.btn-lg.btn-hero-clear.btn-block(type='submit') Start
            
